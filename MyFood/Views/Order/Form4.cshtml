                @Html.TextBoxFor(model => model.Emp1, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Emp1, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.Emp2)
                @Html.TextBoxFor(model => model.Emp2, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Emp2, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <hr />
    <div class="container-sm">
        @Html.Label("بيانات التعبئة")
        <br /><br />
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.mealCategory_id)
