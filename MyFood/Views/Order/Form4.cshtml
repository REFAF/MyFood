@model MyFood.Models.ViewModelForm4
@{
    ViewBag.Title = "Form4";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2> نموذج إدخال الطعام للصالات وتعبئته</h2>
<br />
@using (Html.BeginForm("Form4", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <br />

    <br />

    <div class="container-sm">

        <div class="row">
            <div class="col-sm-1">
                @Html.LabelFor(model => model.Team_id)
                @Html.DisplayFor(model => model.Team_id, new { @class = "form-control" })
            </div>
            <div class="col-sm-1">
                @Html.LabelFor(model => model.directionSymbol)
                @Html.DisplayFor(model => model.directionSymbol, new { @class = "form-control" })
            </div>
            <div class="col-sm-1">
                @Html.LabelFor(model => model.categoryId)
                @Html.DisplayFor(model => model.categoryId, new { @class = "form-control" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.unitId)
                @Html.DisplayFor(model => model.unitId, new { @class = "form-control" })
