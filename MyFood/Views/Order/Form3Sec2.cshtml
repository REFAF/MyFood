@model MyFood.Models.FoodReceiptForm3
@{
    ViewBag.Title = "Form3Sec2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .space {
        margin-left: 140px;
    }

    .marginTop {
        margin-top:10px;
    }
</style>




<br />
<h2> تقرير صحة وسلامة استلام الطعام</h2>

@using (Html.BeginForm("Form3Sec2", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <br />
    @Html.HiddenFor(model => model.f3_id)

    <div>
        @Html.Label("نوع الطعام")
    </div>
    <div class="container-sm">
        <div class="row marginTop">
            <div class="col-sm-6">
                @Html.CheckBoxFor(model => model.FoodType.rice)  أرز
                @Html.CheckBoxFor(model => model.FoodType.water) ماء
                @Html.CheckBoxFor(model => model.FoodType.chicken)  دجاج
                @Html.CheckBoxFor(model => model.FoodType.soup) إدام
                @Html.CheckBoxFor(model => model.FoodType.meat) لحم 
                @Html.CheckBoxFor(model => model.FoodType.pies) فطائر 
            </div>
        </div>
        
        <div class="row marginTop">
            <div class="col-sm-6">
                @Html.CheckBoxFor(model => model.FoodType.dates) تمر
                @Html.CheckBoxFor(model => model.FoodType.bread) خبز
                @Html.CheckBoxFor(model => model.FoodType.fruit) فاكهة
                @Html.CheckBoxFor(model => model.FoodType.pasta) معكرونة
                @Html.CheckBoxFor(model => model.FoodType.gursan) قرصان
            </div>
        </div>
        <div class="row marginTop">
            <div class="col-sm-6">
                @Html.CheckBoxFor(model => model.FoodType.groats) جريش
                @Html.CheckBoxFor(model => model.FoodType.dessert) حلا
                @Html.CheckBoxFor(model => model.FoodType.vegetables) خضار
                @Html.CheckBoxFor(model => model.FoodType.buffet) بوفيه
                @Html.CheckBoxFor(model => model.FoodType.juices) عصائر
            </div>
        </div>
    </div>

    <hr />

    <div class="container-sm marginTop">
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.cart_num)
                @Html.TextBoxFor(model => model.cart_num, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cart_num, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.pot_num)
                @Html.TextBoxFor(model => model.pot_num, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.pot_num, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="container-sm">
        <div class="row">
            <div class="col-sm-3">
                @Html.Label("تصنيف الطعام:")<br />
                @Html.CheckBoxFor(model => model.edible) طعام صالح
                @Html.CheckBoxFor(model => model.inedible) طعام غير صالح
            </div>
        </div>
    </div>

    <hr />
    <div class="container-sm">
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.arrival_time)
                @Html.TextBoxFor(model => model.arrival_time, new { @class = "form-control", @type = "time" })
                @Html.ValidationMessageFor(model => model.arrival_time, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.kilos_arrival_time)
                @Html.TextBoxFor(model => model.kilos_arrival_time, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.kilos_arrival_time, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.return_time)
                @Html.TextBoxFor(model => model.return_time, new { @class = "form-control", @type = "time" })
                @Html.ValidationMessageFor(model => model.return_time, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.kilos_return_time)
                @Html.TextBoxFor(model => model.kilos_return_time, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.kilos_return_time, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <br />
    <div class="container-sm">
        <div class="row">
            <div class=" col-sm-2">
                @Html.Label("ملاحظات")
                @Html.TextBoxFor(model => model.note, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.note, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <br />
    <br />

    <div class="container-sm">
        <div>
            <input type="submit" class="btn btn-default space" value="حفظ" />
            <input name="button" type="submit" class="btn btn-default" value="تسليم التقرير" />
        </div>
    </div>
}


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script language="javascript">
        $(document).ready(function () {

            //1. Add new row
            $("#addNew").click(function (e) {
                e.preventDefault();
                var $tableBody = $("#dataTable");
                var $trLast = $tableBody.find("tr:last");
                var $trNew = $trLast.clone();

                var suffix = $trNew.find(':input:first').attr('name').match(/\d+/);
                //$trNew.find("td:last").html('<a href="#" class="remove">Remove</a>');
                $.each($trNew.find(':input'), function (i, val) {
                    // Replaced Name
                    var oldN = $(this).attr('name');
                    var newN = oldN.replace('[' + suffix + ']', '[' + (parseInt(suffix) + 1) + ']');
                    $(this).attr('name', newN);
                    //Replaced value
                    var type = $(this).attr('type');
                    if (type.toLowerCase() == "text") {
                        $(this).attr('value', '');
                    }

                    // If you have another Type then replace with default value
                    $(this).removeClass("input-validation-error");

                });
                $trLast.after($trNew);

                // Re-assign Validation
                var form = $("form")
                    .removeData("validator")
                    .removeData("unobtrusiveValidation");
                $.validator.unobtrusive.parse(form);
            });

            //// 2. Remove
            //$('a.remove').live("click", function (e) {
            //    e.preventDefault();
            //    $(this).parent().parent().remove();
            //});

        });
    </script>
}