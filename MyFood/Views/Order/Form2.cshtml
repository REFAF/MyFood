@model MyFood.Models.ViewModelForm2
@{
    ViewBag.Title = "Form2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>استلام سيارة وأدوات تعبئة </h2>
<br />

@using (Html.BeginForm("Form2", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container-sm">
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.order_id)
                @Html.TextBoxFor(model => model.order_id, "{0:#.#}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.order_id, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.car_num)
                @Html.TextBoxFor(model => model.car_num, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.car_num, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.delivery_date)
                @Html.EditorFor(m => m.delivery_date, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        @type = "date",
               data_val_date = "صيغة التاريخ غير صحيحة"
                    }
                })
                @Html.ValidationMessageFor(model => model.delivery_date, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <hr />
    <div class="container-sm">
        @Html.Label("أدوات التعبئة")
        <br />
        <div><a href="#" id="addNew">إضافة صنف جديد</a></div>
        <table id="dataTable">
            <tr>
                <th>@Html.LabelFor(model => model.ToolDetailNav.tool_id)</th>
                <th>@Html.LabelFor(model => model.ToolDetailNav.tool_unit)</th>
                <th>@Html.LabelFor(model => model.ToolDetailNav.quantity)</th>
                <th>@Html.LabelFor(model => model.ToolDetailNav.returned_tools)</th>
                <th>@Html.LabelFor(model => model.ToolDetailNav.note)</th>

            </tr>
            @if (Model != null && Model.toolDetailForm2.Count > 0)
            {
                int j = 0;
                foreach (var i in Model.toolDetailForm2)
                {
                    <tr>
                        <td>
                                @Html.DropDownListFor(a => a.toolDetailForm2[j].tool_id,
                               new SelectList(Model.ToolIE, "tool_id", "tool_name"), "اختر اسم الصنف ...",
                               new { @class = "form-control col-sm-2"})
                            </td>
                        <td>
                            @Html.TextBoxFor(a => a.toolDetailForm2[j].tool_unit,
                           new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.toolDetailForm2[j].quantity,
                           new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.toolDetailForm2[j].returned_tools,
                           new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.toolDetailForm2[j].note,
                           new { @class = "form-control" })
                        </td>

                    </tr>
                    j++;
                }
            }
        </table>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="حفظ" />
        </div>
    </div>

}


