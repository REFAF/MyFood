<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>جمعية طعامي</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/public/plugins/datatables/dataTables.bootstrap.css">


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("جمعية طعامي", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("الرئيسية", "Index", "Home")</li>
                    <li>@Html.ActionLink("عن الجمعية", "About", "Home")</li>
                    <li>@Html.ActionLink("تواصل معنا", "Contact", "Home")</li>
                    <li>@Html.ActionLink("خدمة جمع الطعام", "OrderForm1", "Order")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            لوحة التحكم
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("الموظفين", "UsersWithRoles", "Account")</li>
                            <li>@Html.ActionLink("أنواع الضيافة", "Index", "BuffetTypes")</li>
                            <li>@Html.ActionLink("أنواع الجهات", "Index", "OrgTypes")</li>
                            <li>@Html.ActionLink("الأحياء", "Index", "Neighborhoods")</li>
                            <li>@Html.ActionLink("الفئات", "Index", "Categories")</li>
                            <li>@Html.ActionLink("الوحدات", "Index", "Units")</li>
                            <li>@Html.ActionLink("أصناف أدوات التعبئة", "Index", "Tools")</li>

                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>جميع الحقوق محفوظة لجمعية طعامي - @DateTime.Now.Year &copy; </p>
        </footer>
    </div>
    <script src="~/public/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/public/plugins/datatables/dataTables.bootstrap.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
