<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <title>جمعية طعامي</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />

    @* icon in browser tab *@
    <link rel="shortcut icon" type="image/ico" href="~/Content/img/logo.png">
    @* social media icon *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
</head>

<body class="body-color">
    <div class="navbar nav-bar-color navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("جمعية طعامي", "Index", "Home", new { area = "" }, new { @class = "brand-color" })
            </div>
            <div class="navbar-collapse collapse font-KhebratMusamim">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("الرئيسية", "Index", "Home")</li>
                    <li>@Html.ActionLink("عن الجمعية", "Index", "Home")</li>
                    <li>@Html.ActionLink("تواصل معنا", "Index", "Home")</li>
                    <li>@Html.ActionLink("خدمة جمع الطعام", "OrderForm1", "Order")</li>

                    @if (User.Identity.IsAuthenticated)
                    {

                        if (User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    لوحة التحكم
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("الموظفين", "UsersWithRoles", "Account")</li>
                                    <li>@Html.ActionLink("أنواع الضيافة", "Index", "BuffetTypes")</li>
                                    <li>@Html.ActionLink("أنواع الجهات", "Index", "OrgTypes")</li>
                                    <li>@Html.ActionLink("الأحياء", "Index", "Neighborhoods")</li>
                                    <li>@Html.ActionLink("الفئات", "Index", "Categories")</li>
                                    <li>@Html.ActionLink("الوحدات", "Index", "Units")</li>
                                    <li>@Html.ActionLink("الطلبات الواردة", "viewOrder", "Order")</li>
                                    <li>@Html.ActionLink("الطلبات المسندة", "AssignedOrder", "Order")</li>
                                    <li>@Html.ActionLink("طلبات قيد التنفيذ", "empProcessingOrder", "Order")</li>
                                    <li>@Html.ActionLink("إدخال الطعام للصالات", "CompletedOrder", "Order")</li>
                                    <li>@Html.ActionLink("صحة وسلامة تسليم الطعام", "FoodDelivery", "Order")</li>
                                    <li>@Html.ActionLink("تقارير تسليم الطعام", "FoodDeliverySup", "Order")</li>
                                </ul>
                            </li>
                        }

                        if (User.IsInRole("مشرف صالات"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    لوحة التحكم
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("الطلبات الواردة", "viewOrder", "Order")</li>
                                    <li>@Html.ActionLink("إدخال الطعام للصالات", "CompletedOrder", "Order")</li>
                                    <li>@Html.ActionLink("تقارير تسليم الطعام", "FoodDeliverySup", "Order")</li>
                                </ul>
                            </li>

                        }

                        if (User.IsInRole("رئيس فريق"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    لوحة التحكم
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("الطلبات المسندة", "AssignedOrder", "Order")</li>
                                    <li>@Html.ActionLink("طلبات قيد التنفيذ", "empProcessingOrder", "Order")</li>
                                    <li>@Html.ActionLink("صحة وسلامة تسليم الطعام", "FoodDelivery", "Order")</li>
                                </ul>
                            </li>

                        }

                        if (User.IsInRole("مدير الجمعية"))
                        {


                        }
                    }
                    else
                    {

                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="font-Mirza-Medium">جميع الحقوق محفوظة لجمعية طعامي - @DateTime.Now.Year &copy; </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/chosen.jquery.js"></script>


</body>


</html>


