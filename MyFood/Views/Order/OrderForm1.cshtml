@model MyFood.Models.OrderForm1ViewModel
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2> تسجيل طلب جديد</h2>

@using (Html.BeginForm("OrderForm1", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <br />
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.phone_number, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.phone_number, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.phone_number, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.buffet_type_id, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.buffet_type_id, new SelectList(Model.BuffetType, "buffet_type_id", "buffet_type_name"), "اختر نوع الضيافة...", new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.plate_num, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.plate_num, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.plate_num, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.persons_num, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.persons_num, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.persons_num, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.event_date, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.event_date,
                new { htmlAttributes = new { @class = "form-control", @type="date" ,data_val_date = "صيغة التاريخ غير صحيحة" } })
            @Html.ValidationMessageFor(model => model.event_date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.event_time, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.event_time,
                new { htmlAttributes = new { @class = "form-control", @type = "time" } })
            @Html.ValidationMessageFor(model => model.event_time, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.unit_id, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.unit_id, new SelectList(Model.Unit, "unit_id", "unit_name"), "اختر اسم المكان...", new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        @Html.Label("      ", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayName("في حال عدم وجود اسم مكان المناسبة الرجاء كتابته هنا أو كتابة رقم المبنى")
            @Html.TextBoxFor(model => model.unit_name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.unit_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="تأكيد الطلب" />
        </div>
    </div>
}

