@model MyFood.Models.FoodReceiptForm3
@{
    ViewBag.Title = "CompletedOrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    .space {
        margin-left: 140px;
    }

    .marginTop {
        margin-top: 10px;
    }
</style>


<br />
<br />



<div class="form-horizontal green-label form-bg-sm">

    <h3 class="green-h"> تقرير صحة وسلامة استلام الطعام</h3>
    <br />

    <div class="form-m-right">
        <div class="row">
            <div class="col-sm-2">
                @Html.Label("رقم الطلب")
            </div>
            
        </div>
        <div class="row">
            <div class="col-sm-2 gold-label">
                @Html.DisplayFor(model => model.order_id)
            </div>
        </div>
    </div>

    <br />

    <div class="form-m-right">

        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.car_num)
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.staff_num)
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.date)
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.day)
            </div>
        </div>

        <div class="row gold-label">
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.car_num)
            </div>
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.staff_num)
            </div>
            <div class="col-sm-2">
                @Html.DisplayFor(m => m.date)
            </div>
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.day)
            </div>
        </div>

    </div>

    <hr />

    <div class="form-m-right">
        <div class="row">
            <div class="col-sm-3">
                @Html.Label("صحة وسلامة العاملين:")<br />
            </div>
            <div class="col-sm-2">
                @Html.Label(" يذكر نوع الحالة:")
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3">
                @Html.DisplayFor(m => m.healthy) سليم
                @Html.DisplayFor(m => m.not_healthy) غير سليم
            </div>
            <div class="col-sm-2 gold-label">
                @Html.DisplayFor(model => model.NotHealthy.nothealthy_type_name)
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-sm">
                @Html.Label("في حالة وجود حالة غير صحية يسجل اسم العامل:")
            </div>
            <div class="col-sm-2 gold-label">
                @Html.DisplayFor(model => model.NotHealthy.Employee1_name)
            </div>
            <div class="col-sm-2 gold-label">
                @Html.DisplayFor(model => model.NotHealthy.Employee2_name)
            </div>
        </div>
    </div>

    <hr />
    <div class="form-m-right">
        @Html.Label("نوع الطعام")
    </div>
    <div class="form-m-right">
        <div class="row marginTop">
            <div class="col-sm-6">
                @Html.DisplayFor(model => model.FoodType.rice)  أرز
                @Html.DisplayFor(model => model.FoodType.water) ماء
                @Html.DisplayFor(model => model.FoodType.chicken)  دجاج
                @Html.DisplayFor(model => model.FoodType.soup) إدام
                @Html.DisplayFor(model => model.FoodType.meat) لحم
                @Html.DisplayFor(model => model.FoodType.pies) فطائر
            </div>
        </div>

        <div class="row marginTop">
            <div class="col-sm-6">
                @Html.DisplayFor(model => model.FoodType.dates) تمر
                @Html.DisplayFor(model => model.FoodType.bread) خبز
                @Html.DisplayFor(model => model.FoodType.fruit) فاكهة
                @Html.DisplayFor(model => model.FoodType.pasta) معكرونة
                @Html.DisplayFor(model => model.FoodType.gursan) قرصان
            </div>
        </div>
        <div class="row marginTop">
            <div class="col-sm-6">
                @Html.DisplayFor(model => model.FoodType.groats) جريش
                @Html.DisplayFor(model => model.FoodType.dessert) حلا
                @Html.DisplayFor(model => model.FoodType.vegetables) خضار
                @Html.DisplayFor(model => model.FoodType.buffet) بوفيه
                @Html.DisplayFor(model => model.FoodType.juices) عصائر
            </div>
        </div>
    </div>

    <hr />

    <div class="form-m-right marginTop">

        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.cart_num)
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.pot_num)
            </div>
        </div>

        <div class="row gold-label">
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.cart_num)
            </div>
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.pot_num)
            </div>
        </div>

    </div>

    <br />

    <div class="form-m-right">
        <div class="row">
            <div class="col-sm-3">
                @Html.Label("تصنيف الطعام:")<br />
                @Html.DisplayFor(model => model.edible) طعام صالح
                @Html.DisplayFor(model => model.inedible) طعام غير صالح
            </div>
        </div>
    </div>

    <hr />

    <div class="form-m-right">
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.exit_time)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(model => model.kilos_exit_time)
            </div>
        </div>
        <div class="row gold-label">
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.exit_time)
            </div>
            <div class="col-sm-3">
                @Html.DisplayFor(model => model.kilos_exit_time)
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.arrival_time)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(model => model.kilos_arrival_time)
            </div>
        </div>
        <div class="row gold-label">
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.arrival_time)
            </div>
            <div class="col-sm-3">
                @Html.DisplayFor(model => model.kilos_arrival_time)
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.return_time)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(model => model.kilos_return_time)
            </div>
        </div>
        <div class="row gold-label">
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.return_time)
            </div>
            <div class="col-sm-3">
                @Html.DisplayFor(model => model.kilos_return_time)
            </div>
        </div>

    </div>

    <br />
    <div class="form-m-right">
        <div class="row">
            <div class=" col-sm-2">
                @Html.Label("ملاحظات")
            </div>
        </div>
        <div class="row gold-label">
            <div class=" col-sm-2">
                @Html.DisplayFor(model => model.note)
            </div>
        </div>
    </div>

    <br />
    <br />

    <div class=" col-md-offset-5 container-sm btn-loign">
        <div>
            @Html.ActionLink("إدخال الطعام للصلات", "Form4",null, new { id = Model.order_id },
           new { @class = "btn-gold" })
        </div>
    </div>
    <br />
</div>





